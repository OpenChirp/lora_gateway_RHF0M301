[Unit]
Description=packet forwarder
Wants=network-online.target
After=network-online.target

[Service]
User=root
Group=root
Restart=always
RestartSec=5
WorkingDirectory=/etc/lora-gateway-RHF0M301
ExecStartPre=/opt/lora-gateway-RHF0M301/scripts/gwrst.sh
ExecStartPre=/opt/lora-gateway-RHF0M301/scripts/gwrst.sh /etc/lora-gateway-RHF0M301/local_conf.json
ExecStart=/opt/lora-gateway-RHF0M301/lora_pkt_fwd
ExecStopPost=/opt/lora-gateway-RHF0M301/scripts/gwrst.sh

[Install]
WantedBy=multi-user.target
